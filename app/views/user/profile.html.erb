<form method="patch" action="/update">

    <%# <% if @user.errors[:email].include?('has already been taken') %>
        <%# <p>User with this email already exists. Please choose a different email.</p> %>
    <%# <% end %>

    
    <% if flash.now[:alert].present? %>
        <div class="alert alert-danger">
            <% flash.now[:alert].each do |error| %>
                <p><%= error %></p>
            <% end %>
        </div>
    <% end %>

    <div class="col-6" style="margin: 0 auto;">

    <div class="col-6" style="margin: 0 auto;">
        <h1>Profile</h1>
        
        <div class="mb-3">
            <label for="name" class="form-label"> Name </label>
            <input type="name" class="form-control" id="name" name="name" aria-describedby="nameHelp" value="<%= current_user.name%>">
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" value="<%= current_user.email%>" readonly>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" value="********">
        </div>
        
        <button type="submit" class="btn btn-primary">Update</button>
  </div>
  
</form>